<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundIntro"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="70dp"
        android:background="@drawable/paper"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/login_top_icon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/person_icon_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:layout_marginTop="30dp"
                android:scaleX="1.1"
                android:scaleY="1.1"
                android:src="@drawable/safa_form">

            </ImageView>

        </LinearLayout>

        <EditText
            android:id="@+id/login_et_name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_top_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/b_nazanin_bold"
            android:hint="نام و نام خانوادگی"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/login_enter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_et_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/b_titr_bold"
            android:text="ورود"
            android:textSize="20dp" />

    </RelativeLayout>


